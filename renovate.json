{
  "extends": [
    "config:base",
    ":meteor"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "statusCheckVerify": true,
  "ignoreDeps": [
    "bcrypt",
    "loggly",
    "node",
    "winston",
    "winston-loggly-bulk"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["lint", "prettier", "eslint"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
